<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFDFD"
    tools:context=".penjelasanMakanan">

    <ImageView
        android:id="@+id/iv_foodDetailsImage"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/nasgor_image_flat"/>

    <TextView
        android:id="@+id/tv_foodDetailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        app:layout_constraintTop_toBottomOf="@id/iv_foodDetailsImage"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:text="Nasi Goreng Telor"/>

    <TextView
        android:id="@+id/tv_foodDetailsContent"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_foodDetailsTitle"
        android:layout_marginTop="15dp"
        android:text="@string/foodDetailsContent"/>

    <TextView
        android:id="@+id/tv_informationTitle"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_foodDetailsContent"
        android:layout_marginTop="20dp"
        android:text="Information"/>

    <TextView
        android:id="@+id/tv_jamTitle"
        android:layout_width="60dp"
        android:layout_height="18dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_informationTitle"
        android:layout_marginTop="5dp"
        android:text="Jam"/>
    <TextView
        android:id="@+id/tv_jamContent"
        android:layout_width="258dp"
        android:layout_height="18dp"
        app:layout_constraintStart_toEndOf="@id/tv_jamTitle"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_informationTitle"
        android:layout_marginTop="5dp"
        android:text="05:00 â€“ 19:00 WIB"/>

    <TextView
        android:id="@+id/tv_hargaTitle"
        android:layout_width="60dp"
        android:layout_height="18dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_jamTitle"
        android:layout_marginTop="5dp"
        android:text="Harga"/>
    <TextView
        android:id="@+id/tv_hargaContent"
        android:layout_width="258dp"
        android:layout_height="18dp"
        app:layout_constraintStart_toEndOf="@id/tv_hargaTitle"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_jamContent"
        android:layout_marginTop="5dp"
        android:text="Rp 15.000"/>

    <TextView
        android:id="@+id/tv_teleponTitle"
        android:layout_width="60dp"
        android:layout_height="18dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_hargaTitle"
        android:layout_marginTop="5dp"
        android:text="Telepon"/>
    <TextView
        android:id="@+id/tv_teleponContent"
        android:layout_width="258dp"
        android:layout_height="18dp"
        app:layout_constraintStart_toEndOf="@id/tv_teleponTitle"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_hargaContent"
        android:layout_marginTop="5dp"
        android:text="0274 515968"/>

    <TextView
        android:id="@+id/tv_lokasiTitle"
        android:layout_width="60dp"
        android:layout_height="18dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_teleponTitle"
        android:layout_marginTop="5dp"
        android:text="Lokasi"/>
    <TextView
        android:id="@+id/tv_lokasiContent"
        android:layout_width="258dp"
        android:layout_height="36dp"
        app:layout_constraintStart_toEndOf="@id/tv_lokasiTitle"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_teleponContent"
        android:layout_marginTop="5dp"
        android:text="Karangasem mBarek CT III/22, Jalan Kaliurang km. 4,5 Yogyakarta"/>

</androidx.constraintlayout.widget.ConstraintLayout>