<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="156dp"
        android:layout_height="228dp"
        android:background="#ffffff"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_placeImage"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_placeTitle"
                app:layout_constraintTop_toBottomOf="@id/iv_placeImage"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="134dp"
                android:layout_height="20dp"/>
                <!--android:text=""-->

            <TextView
                android:id="@+id/tv_placeLocation"
                app:layout_constraintTop_toBottomOf="@id/tv_placeTitle"
                android:layout_marginTop="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="134dp"
                android:layout_height="16dp"/>
                <!--android:text=""-->
            
            <ImageView
                android:id="@+id/iv_ratingStar"
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_placeLocation"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="11dp"/>
            <TextView
                android:id="@+id/tv_ratingText"
                android:layout_width="20dp"
                android:layout_height="14dp"
                app:layout_constraintTop_toTopOf="@id/iv_ratingStar"
                app:layout_constraintBottom_toBottomOf="@id/iv_ratingStar"
                app:layout_constraintStart_toEndOf="@id/iv_ratingStar"
                android:layout_marginStart="3dp"/>

            <ImageView
                android:id="@+id/iv_locIcon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:layout_constraintTop_toBottomOf="@id/iv_ratingStar"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="11dp"/>
            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="20dp"
                android:layout_height="14dp"
                app:layout_constraintTop_toTopOf="@id/iv_locIcon"
                app:layout_constraintBottom_toBottomOf="@id/iv_locIcon"
                app:layout_constraintStart_toEndOf="@id/iv_locIcon"
                android:layout_marginStart="3dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>